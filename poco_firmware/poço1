/* POCO 1 - V5.5 */
#include <ESP8266WiFi.h>
#include <WiFiClientSecure.h>
#include <PubSubClient.h>

#define NUM_POCO 1
#define PIN_RELE D1
#define PIN_FLUXO D5

// ---------- WIFI ----------
const char* ssid = "Hamilton";
const char* password = "04321518";

// ---------- MQTT ----------
const char* mqtt_server = "j0c0a273.ala.us-east-1.emqxsl.com";
const int   mqtt_port   = 8883;
const char* mqtt_user   = "esp8266";
const char* mqtt_pass   = "DZhpGc9epW4Btyg";

WiFiClientSecure espClient;
PubSubClient client(espClient);

// ---------- VARIÁVEIS ----------
unsigned long last_cmd_time = 0;
unsigned long timeout_ms = 30000UL;
int last_cmd_received = 0;

const unsigned long HEARTBEAT_MS = 5000UL;
unsigned long last_heartbeat = 0;

void callback(char* topic, byte* payload, unsigned int length) {
  String msg;
  for (unsigned int i=0; i<length; i++) msg += (char)payload[i];

  Serial.printf("[MQTT] %s -> %s\n", topic, msg.c_str());
  String t = String(topic);

  // ---------- COMANDO ----------
  if (t == "pocos/cmd") {
    last_cmd_time = millis();
    last_cmd_received = msg.toInt();

    bool turnOn = false;
    int cmd = last_cmd_received;

    // comando direto → "1"
    if (cmd == NUM_POCO) turnOn = true;

    // comando duplo → "12", "13", "23"
    else {
      String s = String(cmd);
      if (s.length() == 2) {
        int a = s.charAt(0) - '0';
        int b = s.charAt(1) - '0';
        if (a == NUM_POCO || b == NUM_POCO) turnOn = true;
      }
    }

    // aplicar comando
    if (turnOn) {
      digitalWrite(PIN_RELE, HIGH);
      digitalWrite(LED_BUILTIN, LOW);
      Serial.printf("[CMD] LIGAR POCO %d\n", NUM_POCO);
    } else {
      digitalWrite(PIN_RELE, LOW);
      digitalWrite(LED_BUILTIN, HIGH);
    }
  }

  // ---------- TIMEOUT RECEBIDO DA CENTRAL ----------
  else if (t == "pocos/timeout") {
    int v = msg.toInt();
    if (v < 5) v = 5;
    timeout_ms = (unsigned long)v * 1000UL;
    Serial.printf("[INFO] timeout recebido: %lu ms\n", timeout_ms);
  }
}

void reconnect() {
  while (!client.connected()) {
    Serial.print("Conectando MQTT...");

    String id = "POCO" + String(NUM_POCO);

    if (client.connect(id.c_str(), mqtt_user, mqtt_pass)) {
      Serial.println("OK");

      client.subscribe("pocos/cmd");
      client.subscribe("pocos/timeout");

      // alive inicial
      client.publish("pocos/p1_alive", "1");

    } else {
      Serial.print("Falhou rc=");
      Serial.println(client.state());
      delay(1500);
    }
  }
}

void setup() {
  Serial.begin(115200);

  pinMode(PIN_RELE, OUTPUT); digitalWrite(PIN_RELE, LOW);
  pinMode(PIN_FLUXO, INPUT_PULLUP);

  pinMode(LED_BUILTIN, OUTPUT);
  digitalWrite(LED_BUILTIN, HIGH);

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(200);
    Serial.print(".");
  }

  espClient.setInsecure();
  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);

  last_cmd_time = millis();
  last_heartbeat = millis();
}

void loop() {
  if (!client.connected()) reconnect();
  client.loop();

  unsigned long now = millis();

  // ---------- HEARTBEAT ----------
  if (now - last_heartbeat >= HEARTBEAT_MS) {
    last_heartbeat = now;

    // alive
    client.publish("pocos/p1_alive", "1");

    // fluxo
    int fluxo = !digitalRead(PIN_FLUXO);
    client.publish("pocos/fluxo1", String(fluxo).c_str());
  }

  // ---------- TIMEOUT DO COMANDO ----------
  if (now - last_cmd_time > timeout_ms) {
    digitalWrite(PIN_RELE, LOW);
    digitalWrite(LED_BUILTIN, HIGH);
  }

  delay(10);
}
